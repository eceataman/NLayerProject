@using EntityLayer.Concrete;
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>name</th>
        <th>şehir</th>
        <th>meslek</th>
        <th>sil</th>
        <th>güncelle</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.Job.Name</td>
            <td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Customer/EditCustomer/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
        </tr>

    }


</table>
<a href="@Url.Action("AddCustomer", "Customer")" class="btn btn-outline-primary">Yeni müşteri</a>

