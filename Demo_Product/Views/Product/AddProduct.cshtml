@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Home/_UILayout.cshtml";
}

<form method="post"> 
    @Html.Label("Ürün adı")
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
    @Html.ValidationMessageFor(x => x.Name)
    <br/>
    @Html.Label("Ürün fiyatı")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Price)
    <br/>
    @Html.Label("Ürün stoğu")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Stock)
    <br/>
    
    <button class="btn btn-primary">ürünü ekle</button>
</form>
