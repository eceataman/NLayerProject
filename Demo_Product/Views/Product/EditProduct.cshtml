@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Views/Home/_UILayout.cshtml";
}

<form method="post">
    @Html.LabelFor(x => x.Id, "Ürün ID")
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Name, "Ürün Adı") <!-- Burada Name alanının modelde var olduğunu varsayıyorum -->
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Price, "Ürün Fiyatı") <!-- Burada Name alanının modelde var olduğunu varsayıyorum -->
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Stock, "Ürün Fiyatı") <!-- Burada Name alanının modelde var olduğunu varsayıyorum -->
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <button class="btn btn-info ">ürünü güncelle</button>
</form>
